@model UpdateVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title text-center mb-0">Update Game</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Game Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter the game title" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Game Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Write a brief description"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Game Cover Image</label>
                            <input asp-for="Image" type="file" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Original Price</label>
                                <input asp-for="Price" class="form-control" type="number" placeholder="Enter price in USD" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewPrice" class="form-label">Discounted Price</label>
                                <input asp-for="NewPrice" class="form-control" type="number" placeholder="Enter discounted price in USD" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GameId" class="form-label">Game ID</label>
                            <input asp-for="GameId" class="form-control" placeholder="Enter unique game identifier" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="HowMany" class="form-label">Available Stock</label>
                            <input asp-for="HowMany" class="form-control" type="number" placeholder="Enter stock quantity" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-100">Update Game</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
